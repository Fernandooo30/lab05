<h2>Listado de Categorías</h2>
<table class="table">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Libros</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each categorias}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.nombre}}</td>
            <td>{{this.descripcion}}</td>
            <td>
                <!-- Listar libros de la categoría -->
                <ul>
                    {{#each ../libros}}
                    {{#ifCond this.categoria_id ../this.id}}
                    <li>{{this.titulo}} - {{this.autor}}
                        <form action="/categorias/{{../this.id}}/libros/eliminar/{{this.id}}" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                        </form>
                    </li>
                    {{/ifCond}}
                    {{/each}}
                </ul>
            </td>
            <td>
                <!-- Formulario para agregar un libro a esta categoría -->
                <form action="/categorias/{{this.id}}/libros/agregar" method="POST">
                    <label for="titulo">Título del libro:</label>
                    <input type="text" name="titulo" required>
                    <label for="autor">Autor:</label>
                    <input type="text" name="autor" required>
                    <button type="submit" class="btn btn-primary">Agregar Libro</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<h3>Agregar Nueva Categoría</h3>
<form action="/categorias/agregar" method="POST">
    <label for="nombre">Nombre:</label>
    <input type="text" name="nombre" required>
    <br>
    <label for="descripcion">Descripción:</label>
    <input type="text" name="descripcion" required>
    <br>
    <button type="submit">Agregar Categoría</button>
</form>
